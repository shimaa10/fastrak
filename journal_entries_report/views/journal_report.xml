<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="journal_entries_report_template">
        <t t-call="web.html_container">
            <t t-call="fastrak.custom_external_layout_standard">
                <!--			<link rel='stylesheet' href="/journal_entries_print/static/src/css/report_css.css"/>-->
                <link href="/fastrak/static/src/css/custom.css" rel="stylesheet"/>

                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-size:15px;">
                        <div class="text-center">
                            <h3>Journal Entry</h3>
                            <h3>
                                <span t-field="o.name"/>
                            </h3>
                        </div>

                        <br></br>

                        <div class="row">
                            <table width="100%" class="table-bordered">

                                <tr>
                                    <td>Journal:
                                        <span t-field="o.journal_id.name"/>
                                    </td>

                                </tr>
                                <tr>
                                    <td>
                                        Date:
                                        <span t-field="o.date"/>
                                    </td>

                                </tr>

                                <!--                                <tr>-->
                                <!--                                    <td>-->
                                <!--                                        Partner:-->
                                <!--                                        <span t-field="o.partner_id.name"/>-->
                                <!--                                    </td>-->
                                <!--                                    <td>-->
                                <!--                                        Reference:-->
                                <!--                                        <span t-field="o.ref"/>-->
                                <!--                                    </td>-->
                                <!--                                </tr>-->
                            </table>
                        </div>
                        <div class="row">
                            <style>
                                .tblbordr {
                                text-align: center;
                                border: 2px solid black;
                                }
                            </style>
                            <br></br>
                            <table width="100%" class="custom_table text-center border-collapse:separate;">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Acc. No</th>
                                        <th>Acc. Name</th>
                                        <th>Cost Center</th>
                                        <th>Analytic Account</th>
                                        <th>Description</th>
                                        <th>Debit</th>
                                        <th>Credit</th>
                                        <th>Equal</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <t t-set="line_number" t-value="1"/>

                                    <t t-foreach="o.get_moves_ordered()" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-esc="line_number"/>
                                                <t t-set="line_number" t-value="line_number+1"/>
                                            </td>

                                            <td>
                                                <span t-field="line.account_id.code"/>
                                            </td>

                                            <td>
                                                <span t-field="line.account_id.name"/>
                                            </td>

                                            <td>
                                                <span t-field="line.cost_centers_id.code"/>
                                                <span t-field="line.cost_centers_id.title"/>
                                            </td>

                                            <td>
                                                <span t-field="line.analytic_account_id.name"/>
                                            </td>

                                            <td>
                                                <span t-field="line.name"/>
                                            </td>

                                            <td>
                                                <span t-field="line.debit"/>

                                            </td>
                                            <td>
                                                <span t-field="line.credit"/>

                                            </td>
                                            <td>
                                                <span t-field="line.debit" t-if="line.debit != 0"/>
                                                <span t-field="line.credit" t-if="line.credit != 0"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfooter>
                                    <tr style="background:lightgray">
                                        <td colspan="7"></td>
                                        <td>
                                            <span t-esc="round(o.total_debit_credit().get('dr_total'),2)"/>
                                        </td>
                                        <td>
                                            <span t-esc="round(o.total_debit_credit().get('cr_total'),2)"/>
                                        </td>
                                    </tr>
                                </tfooter>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
            id="journal_entries_report"
            model="account.move"
            string="Journal Entries"
            report_type="qweb-pdf"
            name="journal_entries_report.journal_entries_report_template"
            file="journal_entries_report.journal_entries_report_template"
    />
</odoo>
